int[] rOffset(int x, int y, Direction dir) {
  int r[] = new int[2];
  if (dir == eFaceUp) { r[0] = x; r[1] = y; }  
  if (dir == eFaceDown) { r[0] = -x; r[1] = -y; }  
  if (dir == eFaceLeft) { r[0] = y; r[1] = -x; }  
  if (dir == eFaceRight) { r[0] = -y; r[1] = x; }  
  return r;
}

