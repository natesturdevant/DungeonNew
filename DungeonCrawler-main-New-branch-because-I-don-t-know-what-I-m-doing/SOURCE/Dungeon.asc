void PlayerController::Rotate(int direction)
{
  
  if (inCombat){
    return;
  }
  
  if (inEvent){
    return;
  }
  
  
  rotateCounter++;
	this.faceDir += direction;
	if(this.faceDir > 3) this.faceDir = eFaceUp;
	else if(this.faceDir < 0) this.faceDir = eFaceLeft;
	this.UpdateRotation();

  renderVisionCone();

  eventCoordinator();
 
  
}

